{
  "manifest_version": 3,
  "name": "Click to Remove Element",
  "version": "1.0.2",
  "description": "Permanently remove ads, popups, and any annoying element. Just point, click, and it's gone forever from that domain.",
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to Remove Element (Ctrl+Shift+X)",
    "default_icon": {
      "16": "icons/inactive-16.png",
      "32": "icons/inactive-32.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Activate Element Remover Mode"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://chrome.google.com/*"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "homepage_url": "https://github.com/[YOUR-GITHUB-USERNAME]/click-to-remove-element"
}
